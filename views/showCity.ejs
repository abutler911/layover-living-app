<%- include('partials/header') %>

<!-- Header Section -->
<div class="container-fluid bg-light text-center py-5">
  <div class="city-header">
    <h1 class="display-4">
      <%= city.name %>, <%= city.state %>
      <button
        onclick="addToFavorites('<%= city._id %>')"
        class="btn btn-outline-primary"
      >
        Favorite
      </button>
    </h1>
    <% if (city.country === 'USA') { %>
    <p class="country-name text-start">United States</p>
    <% } else { %>
    <p class="country-name text-start"><%= city.country %></p>
    <% } %>
  </div>

  <div class="container mt-5">
    <div class="card">
      <div class="row card-body">
        <div class="col-md-6">
          <h4>City Rating</h4>
          <div class="progress">
            <div
              class="progress-bar"
              role="progressbar"
              style="width: <%= city.rating * 20 %>%"
              aria-valuenow="<%= city.rating * 20 %>"
              aria-valuemin="0"
              aria-valuemax="100"
            ></div>
          </div>
        </div>
        <div class="col-md-6">
          <h4>Safety Rating</h4>
          <div class="progress">
            <div
              class="progress-bar"
              role="progressbar"
              style="width: <%= city.safetyRating * 20 %>%"
              aria-valuenow="<%= city.safetyRating * 20 %>"
              aria-valuemin="0"
              aria-valuemax="100"
            ></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <img
    src="<%= imageUrl %>"
    alt="<%= city.name %>"
    class="img-fluid rounded header-image mt-5"
  />

  <!-- User Rating Section -->
  <div class="container mt-5">
    <h3>Add Your Rating</h3>
    <form action="/rate-city" method="post">
      <div class="form-group">
        <label for="rating">City Rating:</label>
        <input
          type="number"
          class="form-control"
          id="rating"
          name="rating"
          min="1"
          max="5"
          required
        />
      </div>
      <div class="form-group">
        <label for="safetyRating">Safety Rating:</label>
        <input
          type="number"
          class="form-control"
          id="safetyRating"
          name="safetyRating"
          min="1"
          max="5"
          required
        />
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>

  <!-- Categories Section -->
  <div class="container mt-5">
    <h3>Restaurants</h3>
    <div class="row">
      <% city.recommendations.filter(r => r.type ===
      'restaurant').forEach(function(recommendation) { %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <img
            src="<%= recommendation.imageUrl %>"
            class="card-img-top"
            alt="<%= recommendation.placeName %>"
          />
          <div class="card-body">
            <h5 class="card-title"><%= recommendation.placeName %></h5>
            <p class="card-text"><%= recommendation.description %></p>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>

  <!-- Comments Section -->
  <div class="container mt-5">
    <h3>Comments</h3>
    <ul class="list-group">
      <% city.comments.forEach(function(comment) { %>
      <li class="list-group-item">
        <%= comment.madeBy.username %>: <%= comment.text %> (<%= comment.date
        %>)
      </li>
      <% }) %>
    </ul>
  </div>

  <script>
    function addToFavorites(cityId) {
      // Make an API request to add the city to the user's favorites.
      // You can handle this logic server-side.
    }
  </script>
</div>
